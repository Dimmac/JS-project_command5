<div class='modal'>
  <button class='modal__close-btn' type='button'></button>

  {{!-- picture poster film --}}

  <div class='modal__container-img'>
    <img class='modal__img' src='' alt='' />
    {{else}}
    <img class="film-list__img" src="" alt="no_poster" />
    {{/if}}
  </div>


  {{!-- text part of the modal --}}
  <div class="modal__text-container">
    <h2 class="modal__text-title"></h2>

    <table class="modal__table">
      <tr class="modal__table-text">
        <td class="modal__table-property">Vote / Votes</td>
        <td class="modal__table-quantity">
          <span class="text vote-text"></span>
          /
          <span class="text"></span>
        </td>
      </tr>

      

      <tr class="modal__table-text">
        <td class="modal__table-property">Popularity</td>
        <td class="modal__table-quantity">
          <span class="text"></span>
        </td>
      </tr>

      <tr class="modal__table-text">
        <td class="modal__table-property">Original title</td>
        <td class="modal__table-quantity">
          <span class="text"></span>
        </td>
      </tr>
      
      <tr class="modal__table-text">
        <td class="modal__table-property">Genre</td>
        <td class="modal__table-quantity">
          <span class="text"></span>
        </td>
      </tr>
    </table>

    <div class="description">
      <p class="discription__title">About</p>
      <p class="discription__text"></p>
    </div>
    
    {{!-- modal buttons --}}
<div class="modal__btn-wrapper">
  <button class="modal__btn js-btn__watched" type="button">add to watched</button>
  <button class="modal__btn js-btn__queue" type="button">add to queue</button>
</div>
  </div>

